<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cards="clr-namespace:DnDClient.Views.Cards"
             xmlns:vm="using:DnDClient.ViewModels"
             x:Class="DnDClient.Views.CampaignListPage">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Button Text="Добавить кампанию" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CampaignListViewModel}}, Path=AddCampaignCommand}"/>
            <CollectionView ItemsSource="{Binding Campaigns}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <cards:CampCard BindingContext="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>