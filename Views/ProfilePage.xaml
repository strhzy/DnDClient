<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="using:DnDClient.ViewModels"
             x:Class="DnDClient.Views.ProfilePage">
    <ContentPage.BindingContext>
        <viewModels:ProfileViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <VerticalStackLayout>
            <Entry Placeholder="Имя пользователя" Text="{Binding NewUsername}"></Entry>
            <Button Text="Сменить имя пользователя" Command="{Binding ChangeUsernameCommand}" />
            <Entry Placeholder="Новый пароль" IsPassword="True" Text="{Binding NewPassword}"></Entry>
            <Entry Placeholder="Подтверрждение нового пароля" IsPassword="True"
                   Text="{Binding CheckNewPassword}">
            </Entry>
            <Button Text="Сменить пароль" Command="{Binding ChangePasswordCommand}"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>